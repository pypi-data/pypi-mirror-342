# 语言设置 (zh/en)
LANGUAGE=zh 

# 本机信息
MACHINE_ID=Specific-Id-Of-PyMail

# 服务是否启用
MACHINE_SERVICE_ENABLED=True

# SMTP服务器配置
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=465

# 邮箱账号配置
SENDER_EMAIL=your-email@gmail.com
EMAIL_PASSWORD=your-app-password  # Gmail的应用专用密码或其他邮箱的授权码

# 收件人配置（多个收件人用逗号分隔）
EMAIL_RECIPIENTS=recipient1@example.com,recipient2@example.com

# 超时设置（秒）
EMAIL_TIMEOUT=300
