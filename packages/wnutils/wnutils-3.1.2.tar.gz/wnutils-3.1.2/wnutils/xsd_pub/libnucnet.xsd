<xsd:schema
  xmlns:xsd="http://www.w3.org/2001/XMLSchema"
  xmlns:ndt="https://libnucnet.sourceforge.net/xsd_pub/2022-10-08/libnucnet__nuc__types/"
  xmlns:rdt="https://libnucnet.sourceforge.net/xsd_pub/2022-10-08/libnucnet__reac__types/"
  xmlns:zdt="https://libnucnet.sourceforge.net/xsd_pub/2022-10-08/zone_data_types/"
>

<!--============================================================================
// Import types.
//===========================================================================-->

<xsd:import
  namespace="https://libnucnet.sourceforge.net/xsd_pub/2022-10-08/libnucnet__nuc__types/"
  schemaLocation="https://libnucnet.sourceforge.net/xsd_pub/2022-10-08/libnucnet__nuc__types.xsd"
/>  

<xsd:import
  namespace="https://libnucnet.sourceforge.net/xsd_pub/2022-10-08/libnucnet__reac__types/"
  schemaLocation="https://libnucnet.sourceforge.net/xsd_pub/2022-10-08/libnucnet__reac__types.xsd"
/>  

<xsd:import
  namespace="https://libnucnet.sourceforge.net/xsd_pub/2022-10-08/zone_data_types/"
  schemaLocation="https://libnucnet.sourceforge.net/xsd_pub/2022-10-08/zone_data_types.xsd"
/>

<!--============================================================================
// Nuclear network.
//===========================================================================-->

<xsd:complexType name="nuclear_network_type">
  <xsd:sequence>
    <xsd:element name="nuclear_data" type="ndt:nuclear_data_type"/>
    <xsd:element name="reaction_data" type="rdt:reaction_data_type"/>
  </xsd:sequence>
</xsd:complexType>

<!--============================================================================
// Root element.
//===========================================================================-->

<xsd:element name="libnucnet_input">
  <xsd:complexType>
    <xsd:sequence>
      <xsd:element name="nuclear_network" type="nuclear_network_type"/>
      <xsd:element name="zone_data" type="zdt:zone_data_type">
        <xsd:unique name="unique_zone_labels">
          <xsd:selector xpath="zone"/>
          <xsd:field xpath="@label1"/>
          <xsd:field xpath="@label2"/>
          <xsd:field xpath="@label3"/>
        </xsd:unique>
      </xsd:element>
    </xsd:sequence>
  </xsd:complexType>
</xsd:element>

</xsd:schema>
