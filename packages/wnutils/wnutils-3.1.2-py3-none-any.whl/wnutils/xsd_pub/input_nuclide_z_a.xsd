<xsd:schema
  xmlns:xsd="http://www.w3.org/2001/XMLSchema"
  xmlns:ndt="https://libnucnet.sf.net/xsd_pub/2022-10-08/libnucnet__nuc__types/"
>

<!--============================================================================
// Import types.
//===========================================================================-->

<xsd:import
  namespace="https://libnucnet.sf.net/xsd_pub/2022-10-08/libnucnet__nuc__types/"
  schemaLocation="https://libnucnet.sf.net/xsd_pub/2022-10-08/libnucnet__nuc__types.xsd"
/>  

<!--============================================================================
// Complex type.
//===========================================================================-->

<xsd:complexType name="nuclide_type">
  <xsd:sequence>
    <xsd:element name="z" type="ndt:z_type"/>
    <xsd:element name="a" type="ndt:a_type"/>
  </xsd:sequence>
</xsd:complexType>

<xsd:complexType name="nuclide_collection">
  <xsd:sequence>
    <xsd:element name="nuclide" type="nuclide_type" maxOccurs="unbounded" />
  </xsd:sequence>
</xsd:complexType>

<!--============================================================================
// Root type.
//===========================================================================-->

<xsd:element
  name="input_nuclides"
  type="nuclide_collection"
>

  <xsd:unique name="unique_nuclide">
    <xsd:selector xpath="nuclide"/>
    <xsd:field xpath="z"/>
    <xsd:field xpath="a"/>
  </xsd:unique>

</xsd:element>

</xsd:schema>
