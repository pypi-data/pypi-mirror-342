class {{ class_name or "Peaks" }} {
    public:

        void operator()(Window& window, Input& input) {
            {% for var in outputs %}
                // dimension: {{ column }}
                extract(window.data[{{ loop.index0 }}] + window.length - {{ count }}, &(input.{{ var | var }}));
            {% endfor %}
        }

    protected:

        void extract(float *array, float *peaksCount) {
            const float thres = np::absmean(array, {{ count }}) * 0.1f;
            uint16_t peaks = 0;

            for (uint16_t i = 1; i < {{ count }} - 1; i++) {
                float prev = array[i - 1];
                float curr = array[i];
                float next = array[i + 1];

                // check if peak
                if (abs(curr - prev) > thres && abs(curr - next) > thres)
                    peaks++;
            }

            *peaksCount = peaks / {{ count - 2 }}.0f;
        }
};