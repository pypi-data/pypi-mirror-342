{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2018"
  },
  "include": [
    "src/*",
    "src/icons/*",
    "src/plugins/*",
    "src/redux/*",
    "src/redux/reducers/*",
    "src/widget-extensions/*",
    "src/utils/*",
    "src/notebooks/*",
    "src/toc-dashboard/*",
    "src/toc-dashboard/generator/*",
    "src/side-dashboard/*",
    "src/side-dashboard/components/*",
    "src/side-dashboard/pages/*",
    "src/side-dashboard/components/cell/*",
    "src/side-dashboard/components/notebook/*",
    "src/side-dashboard/components/layout/*",
    "src/side-dashboard/components/placeholder/*",
    "src/side-dashboard/components/tmp/*",
    "src/side-dashboard/components/buttons/*",
    "src/side-dashboard/components/toc/*",
    "src/dashboard-widgets/*",
    "src/chat-dashboard/*",
    "src/playback/*"
  ]
}
