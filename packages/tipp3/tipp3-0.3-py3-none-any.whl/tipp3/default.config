# parameters can be set from main.config
# this is just an example file as the default configuration.
[basic]
refpkg_path           =
alignment_method      =
placement_method      =
pplacer_path          =
bscampp_path          =
blastn_path           =
witch_path            =
tippjsonmerger_path   = 

# default WITCH setup
[witch]
mode                    = witch-ng
num_hmms                = 1
use_weight              = 1
save_weight             = 0
keep_decomposition      = 0
alignment_size          = 10
alignment_upper_bound   = 1000

# default BSCAMPP setup
[bscampp]
placement_method = pplacer
subtreesize = 2000
support_value = 0.95
cpus_per_job = 4

# default pplacer-taxtastic setup
[pplacer-taxtastic]
support_value = 0.90

# default BLAST setup
[blast]
threshold = 50

# refpkg settings, currently only used for excluding marker genes
[refpkg]
exclusion=FtsY_COG0552,RpoB_COG0085
