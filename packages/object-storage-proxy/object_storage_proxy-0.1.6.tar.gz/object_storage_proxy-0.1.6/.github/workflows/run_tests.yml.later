name: tests on merge

on:
  pull_request:
    branches:
      - main
  workflow_dispatch:

jobs:
  test-yaxp-common:
    runs-on: ubuntu-latest
    # defaults:
    #   run:
    #     working-directory: 
    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Run unit tests
        run: cargo test

  test-pyaxp:
    runs-on: ubuntu-latest
    # defaults:
    #   run:
    #     working-directory: crates/pyaxp
    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Install the latest version of uv
        uses: astral-sh/setup-uv@v5

      - name: Install venv
        run: uv sync

      - name: Run unit tests
        run: uv run pytest --cov
