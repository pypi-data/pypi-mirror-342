{
  "name": "{{ cookiecutter.project_name }}",
  "description": "{{ cookiecutter.description }}",
  "build": {
    "commands": [["docker"], ["cdktf"]]
  },
  "deploy": {
    "register_service": {
      "http": true,
      "lambda": true
    },
    "commands": [["docker"], ["cdktf"]],
    "dependencies": {
      "logging": {
        "repo_class_name": "hmd-inf-api-gateway",
        "required": "true",
        "version_spec": "~= 0.1"
      },
      "datadog-lambda": {
        "repo_class_name": "hmd-inf-datadog-lambdas",
        "required": "true",
        "version_spec": "~= 0.1"
      },
      "base-vpc": {
        "repo_class_name": "hmd-vpc",
        "required": "true",
        "version_spec": "~= 0.1"
      },
      "lib-repo": {
        "repo_class_name": "hmd-inf-s3bucket",
        "required": "true",
        "version_spec": "~= 0.1"
      },
      "neptune-db": {
        "instance_name": "global-graph",
        "repo_class_name": "hmd-inf-neptune",
        "required": "true",
        "version_spec": "~= 0.1"
      }
    },
    "default_configuration": {
      "content_item_type_configs": [
        "{{ cookiecutter.content_item_types_repo }}"
      ],
      "content_path_configs": {
        "change_me_root": [
          {
            "path": "/hmd_lang_librarian.ns_day@iso_date:local",
            "relationships": [
              "hmd_lang_librarian.content_item_has_ns_day:local"
            ]
          }
        ]
      },
      "operations_module": [
        "hmd_ms_librarian.hmd_ms_librarian",
        "hmd_ms_base.crud_operations"
      ]
    }
  }
}
