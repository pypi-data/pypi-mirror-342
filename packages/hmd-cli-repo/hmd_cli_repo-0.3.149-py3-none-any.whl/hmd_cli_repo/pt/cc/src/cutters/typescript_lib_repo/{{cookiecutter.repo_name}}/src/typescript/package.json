{
  "name": "@{{ cookiecutter._npm_scope | lower }}/{{ cookiecutter.repo_name | replace(cookiecutter._org + '-', '') }}",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [],
  "author": {
    "name": "{{ cookiecutter._author }}",
    "email": "{{ cookiecutter._author_email }}"
  },
  "publishConfig": {
    "registry": "{{ cookiecutter._npm_registry_url }}"
  },
  "repository": {
    "type": "git",
    "url": "{{ cookiecutter.__git_url }}"
  },
  "hmd": {
    "name": "{{ cookiecutter.short_name | replace('-', '_') }}",
    "type": "library"
  },
  "dependencies": {
    "typescript": "^4.2.4"
  },
  "scripts": {
    "build:dev": "NODE_ENV=development tsc --project tsconfig.prod.json",
    "build": "NODE_ENV=production tsc --project tsconfig.prod.json",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@hmdlabs/client-scripts": "^0.1.6",
    "@types/jest": "^26.0.19",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4"
  }
}
