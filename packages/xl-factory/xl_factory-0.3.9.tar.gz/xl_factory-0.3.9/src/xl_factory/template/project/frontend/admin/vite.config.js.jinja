import vue from '@vitejs/plugin-vue'
import { resolve } from 'path'


export default {
  root: resolve(__dirname, '.'),
  plugins: [vue()],
  resolve: {
    alias: {
      '#': resolve(__dirname, '../../app'),
      '@': resolve(__dirname, '../public'),
      '$': resolve(__dirname, '.')
    }
  },
  server: {
    proxy: {
      '/api': {
        target: 'http://127.0.0.1:{{ port }}',
        changeOrigin: false,
        rewrite: path => path.replace(/^\/api/, '')
      }
    },
  }
}
