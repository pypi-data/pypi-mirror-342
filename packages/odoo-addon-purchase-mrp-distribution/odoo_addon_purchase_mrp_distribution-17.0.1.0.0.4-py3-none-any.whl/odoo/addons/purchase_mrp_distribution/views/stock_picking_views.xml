<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_picking_form" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='move_ids_without_package']/tree/field[@name='quantity']"
                position="after"
            >
                <field name="distribution_bom_id" column_invisible="1" />
                <button
                    name="action_open_distribution_wizard"
                    type="object"
                    icon="fa-sitemap"
                    invisible="not distribution_bom_id or state in ['done', 'cancel']"
                    title="Distribute quantity"
                />
            </xpath>
        </field>
    </record>
</odoo>
